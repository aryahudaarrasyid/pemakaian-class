class mahasiswa():

    jumlah_mahasiswa = 0

    def __init__(self, input_nama,input_nim):
        self.nama = input_nama
        self.nim = input_nim
        mahasiswa.jumlah_mahasiswa += 1

otong = mahasiswa("otong surotong", 1317001)
ucup = mahasiswa("Yusuf bin Sanusi", 1317002)

print(mahasiswa.jumlah_mahasiswa)
